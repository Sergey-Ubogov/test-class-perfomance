{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "allowJs": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "include": [
        "index.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}